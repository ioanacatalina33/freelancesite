{
   "compileOnSave": true,
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "allowJs": true,
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./",
      "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "typeRoots": ["node_modules/@types", "src/types"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["@types/node", "@types/jest"]
   },
   "include": ["src"],
   "exclude": ["node_modules"]
}
